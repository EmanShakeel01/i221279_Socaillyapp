<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".storyviewer1">

    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/status"
        android:scaleType="fitXY"
        app:tint="@android:color/white"
        android:layout_alignParentTop="true" />

    <!-- Story Image -->
    <!-- Story Image only between top bar and bottom buttons -->
    <ImageView
        android:id="@+id/storyImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:layout_above="@id/bottomButtons"
        android:scaleType="centerCrop"
        android:src="@drawable/mystory1" />


    <!-- Top-right icons -->
    <LinearLayout
        android:id="@+id/topIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:padding="12dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/people"
            android:tint="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/grid"
            android:tint="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/emoji"
            android:tint="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/music"
            android:tint="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/options"
            android:tint="@android:color/white"/>
    </LinearLayout>

    <!-- Bottom action buttons -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:gravity="center">


        <Button
            android:id="@+id/yourStoriesBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/lightgrey"
            android:text="Your stories"
            android:textColor="@android:color/black"

            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/closeFriendsBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/lightgrey"
            android:text="Close Friends"
            android:textColor="@android:color/black"

            android:layout_marginEnd="12dp"/>

        <ImageButton
            android:id="@+id/nextBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back2"
            android:backgroundTint="@color/pink"
            app:tint="@android:color/white"/>


    </LinearLayout>

</RelativeLayout>