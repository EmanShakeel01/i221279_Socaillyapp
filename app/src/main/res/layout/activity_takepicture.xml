<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".takepicture">

    <!-- Top status bar -->
    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/status"
        android:scaleType="fitXY"
        app:tint="@android:color/white" />

    <!-- Camera preview -->

    <!-- Middle picture -->
    <TextureView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/middlePicture"
        android:layout_width="420dp"
        android:layout_height="610dp"
        android:src="@drawable/mystory1"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent" />

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">



        <ImageView
            android:id="@+id/back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/back"

            app:tint="@color/black" />

    </LinearLayout>

    <!-- Bottom scrollable camera controls -->
    <HorizontalScrollView
        android:id="@+id/bottomScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Buttons row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/galleryPreview"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:civ_circle_background_color="@android:color/darker_gray"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="24dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/shutterButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:color/white"
                    app:civ_circle_background_color="@android:color/white"
                    android:layout_marginHorizontal="8dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cameraSwitch"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_rotate"
                    app:civ_circle_background_color="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:layout_marginStart="24dp" />
            </LinearLayout>

            <!-- Mode selector -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TYPE"
                    android:textColor="@color/pink"
                    android:paddingHorizontal="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIVE"
                    android:textColor="@color/pink"
                    android:paddingHorizontal="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NORMAL"
                    android:textColor="@color/pink"
                    android:paddingHorizontal="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOMERANG"
                    android:textColor="@color/pink"
                    android:paddingHorizontal="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUPERZOOM"
                    android:textColor="@color/pink"
                    android:paddingHorizontal="12dp"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
